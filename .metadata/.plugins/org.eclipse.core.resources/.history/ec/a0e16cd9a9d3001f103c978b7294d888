package SW_1;

public class User {
	private String username;
	private String gender;
	private double age;
	private double weight;
	private double height;
	private int exLvl; //level of exercise per week
	private double recCal; //recommended calories
	//constructor
	public User(String username, String gender, double age, double weight, double height) {
		this.username = username;
		this.gender = gender;
		this.age = age;
		this.height = height;
		this.weight = weight;
		this.recCal = recommendCalories(age, weight, height, gender, exLvl);
		
	}
	//getters and setters
	public String getUsername() {
		return this.username;
	}
	public String getGender() {
		return this.gender;
	}
	public double getAge() {
		return this.age;
	}
	public double getHeight() {
		return this.height;
	}
	public double getWeight() {
		return this.weight;
	}
	public double getRecCal() {
		return this.recCal;
	}
	public double getBMI() {
		return this.weight/Math.pow(this.height/100, 2.0);
	}
	public double getExLvl() {
		return this.exLvl;
	}
	public void setUsername(String username) {
		this.username = username;
	}
	public void setGender(String gender) {
		this.gender = gender;
	}
	public void setAge(int age) {
		this.age = age;
	}
	public void setHeight(double height) {
		this.height = height;
	}
	public void setWeight(double weight) {
		this.weight = weight;
	}
	public void setRecCal(double recCal) {
		this.recCal = recCal;
	}
	//a method that recommends the user's daily calorie intake
	public double recommendCalories(double age, double weight, double height, String gender, int exLvl){
		double res = 0.0; //calculation result
		double bmr;
		if (this.gender.equals("male")) {
			bmr = (10 * weight) + (6.25 * height) - (5 * age) + 5;
		} else {
			bmr = (10 * weight) + (6.25 * height) - (5 * age) - 161;
		}
		if (exLvl > 5) {
			res = bmr*1.725;
		} else if (exLvl > 3) {
			res = bmr*1.55;
		} else if (exLvl > 1) {
			res = bmr*1.375;
		} else if (exLvl >= 0) {
			res = bmr*1.2;
		}
		return res;
	}
}
